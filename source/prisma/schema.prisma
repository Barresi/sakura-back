generator client {
  provider = "prisma-client-js"
}

datasource db {
  url      = env("DB_URL")
  provider = "postgresql"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  friends  Friend[] @relation("UserToFriends")
  friendOf Friend[] @relation("FriendToFriends")
}

model Friend {
  id         Int      @id @default(autoincrement())
  userId     Int
  friendId   Int
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation("UserToFriends", fields: [userId], references: [id])
  friend     User     @relation("FriendToFriends", fields: [friendId], references: [id])
}
