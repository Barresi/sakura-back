generator client {
  provider = "prisma-client-js"
}

datasource db {
  url      = env("DB_URL")
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int          @id @default(autoincrement())
  // main part
  username  String?      @unique
  firstName String
  lastName  String
  email     String       @unique
  password  String
  // - - -
  role      Role         @default(USER)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  friends  Friend[] @relation("UserToFriends")
  friendOf Friend[] @relation("FriendToFriends")
}

model Friend {
id         Int      @id @default(autoincrement())
userId     Int
friendId   Int
status     String
createdAt  DateTime @default(now())
updatedAt  DateTime @updatedAt
user       User     @relation("UserToFriends", fields: [userId], references: [id])
friend     User     @relation("FriendToFriends", fields: [friendId], references: [id])
